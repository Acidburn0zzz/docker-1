#!/usr/bin/env node

var path = require('path');
var Docker = require('./src/docker.js');
var pwd = process.env.PWD;
var program = require('commander');

program
  .version('0.0.1')
  .option('-i, --input_dir [value]', 'Input directory (defaults to current dir)')
  .option('-o, --output_dir [value]', 'Output directory (defaults to ./doc)')
  .parse(process.argv);

var d = new Docker(program.input_dir || pwd, program.output_dir || path.join(pwd, 'doc'));
if(program.args.length === 0) program.args = ['./'];
d.doc(program.args);
